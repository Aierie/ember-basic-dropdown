{{#if dropdown.isOpen}}
  {{#basic-dropdown/wormhole to=to renderInPlace=renderInPlace didInsert=(action "didOpen") willRemove=(action "willClose")}}
    <div
      id={{elementId}}
      class="ember-basic-dropdown-content {{class}} {{if renderInPlace 'ember-basic-dropdown-content--in-place'}}"
      dir={{dir}}>
      {{yield}}
    </div>
  {{/basic-dropdown/wormhole}}
{{/if}}