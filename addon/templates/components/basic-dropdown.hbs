  isOpen=publicAPI.isOpen
  actions=publicAPI.actions
  trigger=(component 'basic-dropdown/trigger'
    elementId=(readonly triggerId)
    appRoot=(readonly appRoot)
    dropdown=(readonly publicAPI)
    tabIndex=(readonly tabIndex)
    onFocus=(action "handleFocus")
  )
  content=(component 'basic-dropdown/content'
    dropdown=(readonly publicAPI)
