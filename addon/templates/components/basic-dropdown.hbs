<div class="ember-basic-dropdown-trigger {{triggerClass}}" tabindex={{tabIndex}} onkeydown={{action "keydown"}} onmousedown={{action "toggle"}} onfocus={{action "focusTrigger"}}>
  {{yield to="inverse"}}
</div>
{{#if opened}}
  {{#ember-wormhole to=_wormholeDestination renderInPlace=renderInPlace}}
    <div class="ember-basic-dropdown-content {{dropdownClass}} {{_dropdownPositionClass}}" dir={{dir}}>
      {{yield publicAPI}}
    </div>
  {{/ember-wormhole}}
{{/if}}