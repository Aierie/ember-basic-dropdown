{{#if dropdown.isOpen}}
  {{#basic-dropdown/content
    dropdown=(readonly dropdown)
    dropdownClass=(readonly class)
    appRoot=(readonly appRoot)
    to=(readonly to)
    triggerId=(readonly triggerId)
    dropdownId=(readonly dropdownId)
    onFocusIn=onFocusIn
    onFocusOut=onFocusOut
    renderInPlace=(readonly renderInPlace)
    animationEnabled=(readonly animationEnabled)
    reposition=(action "reposition")}}
    {{yield}}
  {{/basic-dropdown/content}}
{{/if}}