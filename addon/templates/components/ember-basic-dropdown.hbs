<div class="ember-basic-dropdown-trigger {{triggerClass}}" tabindex={{tabindex}} onkeydown={{action "keydown"}} onclick={{action "toggle"}}>
  {{yield this}}
</div>
{{#if _opened}}
  {{#ember-wormhole to=_wormholeDestination renderInPlace=renderInPlace}}
    <div class="ember-basic-dropdown-content {{dropdownClass}} {{_dropdownPositionClass}}">
      {{yield this to="inverse"}}
    </div>
  {{/ember-wormhole}}
{{/if}}